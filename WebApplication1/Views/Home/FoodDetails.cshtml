@model WebApplication1.Models.FoodItem
@{
    ViewBag.Title = "User Dashboard";
    Layout = "~/Views/_LayoutPage2.cshtml";
}


<!--PreLoader-->
<div class="loader">
    <div class="loader-inner">
        <div class="circle"></div>
    </div>
</div>
<!--PreLoader Ends-->
<!-- Banner Area Starts -->
<section class="banner-area banner-area2 menu-bg text-center" style="background-image: url('@Url.Content(Model.ImageUrl)'); background-size: cover; background-position: center;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><i>@Model.Name</i></h1>
                <p class="pt-2"><i>@Model.Description</i></p>
            </div>
        </div>
    </div>
</section>
<!-- Banner Area Ends -->
<!-- Food Details Section -->
<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-lg-7">
                                <h5 class="mb-3">
                                    <a href="@Url.Action("Index", "Home")" class="text-body">
                                        <i class="fas fa-long-arrow-alt-left me-2"></i> Continue ordering
                                    </a>
                                </h5>

                                <hr>

                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex flex-row align-items-center">
                                                <div>
                                                    <img src="@Url.Content(Model.ImageUrl)" class="img-fluid rounded-3" alt="@Model.Name" style="max-width: 100px; height: auto;">
                                                </div>

                                                <div class="ms-3">
                                                    <h5>@Model.Name</h5>
                                                    <p class="small mb-0">@Model.Description</p>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center">
                                                <div style="width: 80px;">
                                                    <h5 class="mb-0">tk @Model.Price</h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!-- Right Column -->
                            <div class="col-lg-5">
                                <div class="card bg-primary text-white rounded-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-4">
                                            <h5 class="mb-0">Add to Cart</h5>
                                        </div>

                                        <form action="@Url.Action("Add", "Cart")" method="post">
                                            <input type="hidden" name="id" value="@Model.Id" />
                                            <input type="hidden" name="price" id="hidden-price" value="@Model.Price" />
                                            <input type="hidden" name="quantity" id="hidden-quantity" value="1" />
                                            <div class="form-group mb-4">
                                                <label for="quantity" class="text-white">Quantity</label>
                                                <input type="number" name="quantity" id="quantity-form" value="1" min="1" class="form-control form-control-lg" />
                                            </div>

                                            <button type="submit" class="btn btn-info btn-block btn-lg">
                                                Add to Cart
                                            </button>
                                        </form>

                                        <hr class="my-4">

                                        <div class="d-flex justify-content-between">
                                            <p class="mb-2">Subtotal</p>
                                            <p class="mb-2">tk <span id="subtotal">@Model.Price</span></p>
                                        </div>

                                        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-info btn-block btn-lg">
                                            <div class="d-flex justify-content-between">
                                                <span>Total</span>
                                                <span>Checkout <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                            </div>
                                        </a>

                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Food Details Section -->
<!-- javascript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/assets01/bootstrap/js/bootstrap.min.js"></script>
<script src="~/assets01/js/main.js"></script>

<script>
    $(document).ready(function () {
        function updateSubtotal() {
            var price = parseFloat($('#hidden-price').val());
            var quantity = parseInt($('#quantity-form').val());
            var subtotal = price * quantity;
            $('#subtotal').text(subtotal.toFixed(2));
        }

        $('#quantity-form').on('input', function () {
            updateSubtotal();
        });

        // Initialize the subtotal
        updateSubtotal();
    });
</script>

</body>
</html>
