<h2>Your Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalPrice</td>
                <td>
                    <a href="@Url.Action("OrderDetails", new { orderId = order.OrderId })">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
