@model IEnumerable<WebApplication1.Models.CartItem>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/_LayoutPage2.cshtml";
}
<!-- Banner Area Starts -->
<section class="banner-area banner-area2 about-bg text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><i>Cart</i></h1>
                <p class="pt-2"><i>Becxast kind form divide night above let moveth bearing darkness.</i></p>
            </div>
        </div>
    </div>
</section>
<section class="cart-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Your Cart</h2>

                @if (!Model.Any())
                {
                    <div class="alert alert-info">
                        <strong>Your cart is empty!</strong>
                        Please add some items to your cart.
                    </div>
                    <a href="@Url.Action("Menu", "Home")" class="btn btn-primary">Go to Menu</a>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>@(item.Price * item.Quantity)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="@Url.Action("Checkout")" class="btn btn-primary">Proceed to Checkout</a>
                }
            </div>
        </div>
    </div>
</section>
