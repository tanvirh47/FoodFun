@model WebApplication1.Models.Order

@{
    ViewBag.Title = "Order Confirmation";
    Layout = "~/Views/_LayoutPage2.cshtml";
}
<!-- Banner Area Starts -->
<section class="banner-area banner-area2 about-bg text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><i>Order Confirmation</i></h1>
                <p class="pt-2"><i>Becxast kind form divide night above let moveth bearing darkness.</i></p>
            </div>
        </div>
    </div>
</section>
<section class="order-confirmation-area section-padding">
    <div class="container">
        <h2 style="color: black; text-align: center;">Your Order has been Placed!</h2>
        <p style="text-align: center;">Thank you for your order. Your order number is <strong>@Model.OrderId</strong>.</p>
        <p style="text-align: center;">We will notify you when your order is being processed.</p>


        <h3>Order Details:</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>

        <p><strong>Total Price: </strong>@Model.TotalPrice</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
    </div>
</section>
